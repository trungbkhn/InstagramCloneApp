<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cimgv_profile_post"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/tv_username_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:text="username"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_post_home"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/btn_heartNotLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart_not_clicked">

            </ImageButton>

            <ImageButton
                android:id="@+id/btn_comment"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginStart="6dp"

                android:layout_toEndOf="@+id/btn_heartNotLike"
                android:src="@drawable/comment">

            </ImageButton>

            <ImageButton
                android:id="@+id/btn_save_comment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/save_unfilled_large_icon">

            </ImageButton>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="16dp">

        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>